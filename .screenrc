startup_message off
# Scroll forever
defscrollback 30000
# Disable annoying lock screen
bind ^x
bind x
# Prevent vim from destroying scrollback
altscreen on
# Open up with bash
shell -bash
# Fix vim color issue
term screen-256color
# Status line
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'
